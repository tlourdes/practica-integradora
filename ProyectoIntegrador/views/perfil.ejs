	
	<!-- Header y head-->
	

	<%- include("./partials/headerLogueado") %>
	

	<!-- /Headery head -->
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= usuario.foto_de_perfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.nombre_perfil %>
					
						<a href="profile-edit.html">
							
				
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<%= usuario.email %>
				<div>
					<ul class="lista">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < productos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/detalle/:id">
							<figure class="product-box_image">
								<img src="<%= productos[i].imagen%>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2> <%= productos[i].nombre_producto %></h2>
								<p> <%= productos[i].descripcion%></p>
								<p>Comentarios: <%= productos[i].comentarios.length%></p>  
							</article>
						</a>
					</section>
				</div>
			<% } %>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>