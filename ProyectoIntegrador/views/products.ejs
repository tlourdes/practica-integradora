	<!-- Header y head-->
	

	<% if (locals.userLoggeado != undefined) { %>
		<%- include("./partials/headerLogueado", { perfil: perfil }) %>
	 <% } else { %>
		<%- include("./partials/header") %>
	 <% } %>

	<!-- /Headery head -->
	<!-- Banner -->
	<div class="banner">
		<img src="images/banner1.png" alt="Banner de ofertas">
		
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->

			 <% for( let i = 0; i < productos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/detalle/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src="/images/productos/<%= productos[i].nombre_archivo_imagen%>" alt="celular">
							</figure>
							<article class="product-box_data">
								<h2> <%= productos[i].nombre_producto %></h2>

							</a>
								<p> <%= productos[i].descripcion%></p>
								<p>Publicado por: <a href="/perfil/<%= productos[i].usuario.id %>"><%= productos[i].usuario.nombre_usuario%></a></p>
								<p>Comentarios: <%= productos[i].comentarios.length%></p>  
							</article>
						
					</section>
				</div>
	
			
			 <% } %>
			
	
			
		</div>
	</div>


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>