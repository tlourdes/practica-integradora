	<!-- Header y head-->
	

	<% if (locals.userLoggeado != undefined) { %>
		
		<%- include("./partials/headerLogueado", { perfil: perfil }) %>
	<% } else {%>
		<%- include("./partials/header") %>
		<% }%>

	<!-- /Headery head -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= producto.nombre_producto %></h2> 
			<p class="product-detail-description">
				<a href="/agregar">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					
						<img src="/images/productos/<%= producto.nombre_archivo_imagen %>" alt="" class="product-detail-img">
						<p class="product-detail-description">
							<%= producto.descripcion %></p>
						
				</article>
				<div class="col-12 col-lg-4">
					
						<section class="comments">
							
							<% for( let i = 0; i < producto.comentarios.length; i++ ) { %> 
							<article>
								
									

									<img src="/images/users/<%= producto.comentarios[i].usuario.foto_perfil %>" alt="foto de perfil" >
								<div class="data">
									<p class="user">
									<strong><a href="/perfil/<%= producto.comentarios[i].usuario.id %>">
										<%= producto.comentarios[i].usuario.nombre_usuario %>
									  </a> </strong>
									  <%= producto.comentarios[i].comentario %> </p>
									 
								</div>
								
								
							</article>
							<% } %>
				
					

					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>